@inherits LayoutComponentBase

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <article class="content px-4">
            @Body
        </article>
        <div id="bird-container">
            <img id="bird" src="bird.png" alt="Flying Bird" />
        </div>

        <div id="elephant-container">
            <img id="elephant" src="elephant.png" alt="Walking Elephant" />
        </div>

    </main>
</div>

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>
